<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="johndoe@example.com" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Username: " />

    <TextView
        android:id="@+id/userNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="User Number: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardians:"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/guardiansSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/guardianNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guardian Name"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/guardianNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guardian Number"
        android:inputType="phone"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/addGuardianButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Guardian"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/editGuardianButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Guardian"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

</LinearLayout>